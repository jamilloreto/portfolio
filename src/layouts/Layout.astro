---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <title>{title}</title>

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Dustify description" />
    <meta property="og:url" content="https://dustify.netlify.app/jamstore" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Dustify title" />
    <meta property="og:description" content="Dustify description" />
    <meta
      property="og:image"
      content="https://brandemia.org/sites/default/files/sites/default/files/bnb_billboard_01-2000x1125.jpg"
    />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="dustify.netlify.app" />
    <meta
      property="twitter:url"
      content="https://dustify.netlify.app/jamstore"
    />
    <meta name="twitter:title" content="Dustify title" />
    <meta name="twitter:description" content="Dustify description" />
    <meta
      name="twitter:image"
      content="https://brandemia.org/sites/default/files/sites/default/files/bnb_billboard_01-2000x1125.jpg"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap");

  /* RESET STYLES*/

  @media (prefers-color-scheme: light) {
    :root {
      --bg-color-body: #fff;
      --color-secondary: #000;
      --color-third: #676c6f;

      --bg-color-primary: #f2f2f2;
      --bg-color-secondary: #e9e9ed;
      --bg-color-third: #dedee2;
      /* #d0d0d7 */
    }
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --bg-color-body: #252525;
      /* #202020 */
      --color-secondary: #fff;
      --color-third: #9c9c9c;

      --bg-color-primary: #333;
      --bg-color-secondary: #454242;
      --bg-color-third: #575252;
      /* #d0d0d7 */
    }
  }

  :root {
    --color-primary: #9259ff;
    --color-primary-hover: #7c41ed;

    --font-size-md: 15px;
    --box-shadow-xs: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    --box-shadow-sm: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    --box-shadow-md: 0 7px 14px 0 rgba(65, 69, 88, 0.1),
      0 3px 6px 0 rgba(0, 0, 0, 0.07);
    --box-shadow-lg: rgba(0, 0, 0, 0.24) 0px 3px 8px;
  }

  html {
    font-family: Poppins, Helvetica, Arial, sans-serif;
    background-color: var(--bg-color-body);
    color: var(--color-secondary);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    border: none;
    outline: none;
    list-style: none;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
  }

  table {
    border-collapse: collapse;
    border-spacing: 0;
    table-layout: fixed;
  }

  ol,
  ul {
    list-style: none;
  }

  span,
  a {
    display: block;
  }

  /* END RESET STYLES*/

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  button {
    font-weight: 500;
  }

  .icon-md {
    width: 22px;
    height: 22px;
  }

  .icon-lg {
    width: 24px;
    height: 24px;
  }

  .icon-xl {
    width: 26px;
    height: 26px;
  }
</style>
